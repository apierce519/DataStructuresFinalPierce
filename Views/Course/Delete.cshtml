@model Course
<h2>Delete</h2>

<p>Are you sure you want to delete this course?</p>
<dl class="row">
    <dt class="col-sm-2">
        Course ID
    </dt>
    <dd class="col-sm-10">
        @Model.CourseId
    </dd>
    <dt class="col-sm-2">
        Name
    </dt>
    <dd class="col-sm-10">
        @Model.Name
    </dd>
    <!-- Add other properties as needed -->
</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="CourseId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="AllCourses" class="btn btn-secondary">Cancel</a>
</form>
